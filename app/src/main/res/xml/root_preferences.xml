<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/access_header">

        <EditTextPreference
            android:key="pref_url"
            android:keyboardNavigationCluster="false"
            android:summary="@string/url_summary"
            app:key="url"
            app:title="@string/url"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:summary="@string/token_summary"
            app:key="token"
            app:title="@string/token"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
